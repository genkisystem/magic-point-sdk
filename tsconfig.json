{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "ES5",
      "DOM",
      "ES2016",
      "ESNext"
    ],
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "test",
    "lib",
    "**/*spect.ts",
  ]
}